{
    "architecture": {
        "type": "transformer",
        "vocab_size": 50000,
        "hidden_size": 4096,
        "num_hidden_layers": 32,
        "num_attention_heads": 32,
        "head_dim": 128,
        "intermediate_size": 16384,
        "max_position_embeddings": 8192,
        "layer_norm_eps": 1e-6,
        "dropout_rate": 0.1,
        "attention_dropout_rate": 0.1,
        "max_relative_position": 32,
        "activation_function": "gelu",
        "initializer_range": 0.02
    },
    "training": {
        "optimizer": {
            "type": "adamw",
            "learning_rate": 1e-4,
            "weight_decay": 0.01,
            "beta1": 0.9,
            "beta2": 0.999,
            "epsilon": 1e-8,
            "grad_clip": 1.0
        },
        "mixed_precision": {
            "enabled": true,
            "param_dtype": "float32",
            "compute_dtype": "bfloat16",
            "output_dtype": "float32"
        },
        "tpu_specific": {
            "enable_fp8": true,
            "block_size": 128,
            "batch_partition_size": 8,
            "model_partition_size": 4,
            "remat_policy": "minimal",
            "scan_layers": true,
            "auto_sharding": true,
            "mesh_shape": [8, 4]
        }
    },
    "inference": {
        "max_length": 2048,
        "temperature": 0.7,
        "top_p": 0.95,
        "top_k": 50,
        "repetition_penalty": 1.1,
        "length_penalty": 1.0
    }
}